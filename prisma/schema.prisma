generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model room {
  id            String   @id
  backgroundUrl String?  @default("/backgrounds/default.jpg")
  createdAt     DateTime @default(now())
  user          user[]
}

model user {
  id     String  @id
  name   String
  roomId String?
  room   room?   @relation(fields: [roomId], references: [id], map: "User_roomId_fkey")

  @@index([roomId], map: "User_roomId_fkey")
}
