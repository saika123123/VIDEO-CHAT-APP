generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Room {
  id            String   @id @default(cuid())
  backgroundUrl String?  @default("/backgrounds/default.jpg")
  createdAt     DateTime @default(now())
  users         User[]
}

model User {
  id     String  @id @default(cuid())
  name   String
  roomId String?
  room   Room?   @relation(fields: [roomId], references: [id])
}